[Unit]
Description=Bybit Trading Bot Web Service
After=network.target

[Service]
Type=simple
# Update the user and paths below to match your system
User=ubuntu
WorkingDirectory=/opt/bybitbotgpt
ExecStart=/opt/bybitbotgpt/venv/bin/python cli.py web
Restart=always

[Install]
WantedBy=multi-user.target
